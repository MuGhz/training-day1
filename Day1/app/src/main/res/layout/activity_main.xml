<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.muhammadghozi41.day1.MainActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day 1! Semangat!!!!!!!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.317" />

    <Button
        android:id="@+id/button_semangat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/semangat"
        app:layout_constraintTop_toBottomOf="@+id/input_nama" />
    <Button
        android:id="@+id/button_lanjut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lanjut"
        app:layout_constraintTop_toBottomOf="@+id/button_semangat" />
    <EditText
        android:id="@+id/input_nama"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_nama" />

</android.support.constraint.ConstraintLayout>
